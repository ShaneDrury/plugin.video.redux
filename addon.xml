<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.redux"
       name="BBC Redux"
       version="0.0.1"
       provider-name="Chris Baume">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Watch TV from BBC Redux</summary>
        <description>This XBMC plugin enables the playing of TV content from the BBC Redux website.</description>
    </extension>
</addon>
